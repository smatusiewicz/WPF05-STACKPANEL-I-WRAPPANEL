<Window x:Class="WpfApp9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp9"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <WrapPanel Orientation="Horizontal" >
            <Button HorizontalAlignment="Center" Width="50">Button1</Button>
            <Button HorizontalAlignment="Left" Width="60">Button2</Button>
            <Button HorizontalAlignment="Right" Width="70">Button3</Button>

        </WrapPanel>
        <StackPanel Orientation="Vertical" Width="200">
            <Button HorizontalAlignment="Left" Width="50">1</Button>
            <Button HorizontalAlignment="Right" Width="60">2</Button>
            <Button HorizontalAlignment="Center" Width="70">3</Button>

        </StackPanel>
    </Grid>
</Window>
